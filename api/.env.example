# =============================================================================
# FICTIONFORGE - ENVIRONMENT VARIABLES
# =============================================================================
# Copy this file to .env and fill in your values

# -----------------------------------------------------------------------------
# API Configuration
# -----------------------------------------------------------------------------
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=True
ENVIRONMENT=development

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173

# -----------------------------------------------------------------------------
# Supabase Configuration
# Get these from: https://supabase.com/dashboard/project/YOUR_PROJECT/settings/api
# -----------------------------------------------------------------------------
SUPABASE_URL=https://YOUR_PROJECT_REF.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# -----------------------------------------------------------------------------
# ChromaDB Configuration
# -----------------------------------------------------------------------------
# Using embedded mode (DuckDB+Parquet) - no HTTP server needed
CHROMADB_PERSIST_DIR=./chromadb_data

# -----------------------------------------------------------------------------
# Redis Configuration
# -----------------------------------------------------------------------------
REDIS_URL=redis://localhost:6379
REDIS_TTL_SECONDS=900

# -----------------------------------------------------------------------------
# AWS Bedrock Configuration
# Set up your own Lambda + API Gateway for LLM access
# See requirements_docs/User Stories/Epic 9/epic9_aws_bedrock_and_embedding_setup_guide.md
# -----------------------------------------------------------------------------
AWS_API_GATEWAY_URL=https://YOUR_API_GATEWAY_ID.execute-api.YOUR_REGION.amazonaws.com/prod/
AWS_BEDROCK_TIMEOUT=120
AWS_REGION=us-east-1

# -----------------------------------------------------------------------------
# Embeddings Configuration
# -----------------------------------------------------------------------------
EMBEDDING_MODEL=all-MiniLM-L6-v2
EMBEDDING_CACHE_DIR=./models/embeddings

# -----------------------------------------------------------------------------
# Security
# Generate a secure key: python -c "import secrets; print(secrets.token_hex(32))"
# -----------------------------------------------------------------------------
SECRET_KEY=your-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
